{
  "name": "kenway",
  "version": "1.1.0",
  "description": "A fast local database with a pre-made API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "start": "node dist/index.js",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" \"tests/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dheshalj/kenway.git"
  },
  "keywords": [],
  "author": "Dheshal Jayamanne <dheshal.j@gmail.com> (https://dheshal.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dheshalj/kenway/issues"
  },
  "homepage": "https://dheshalj.github.io/kenway/",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.3",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "express": "^4.18.1",
    "fs-extra": "^10.1.0",
    "ws": "^8.8.1"
  }
}
